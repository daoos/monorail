{
  "name": "@miniarray/monorail",
  "description": "Metro UI components for vue",
  "private": false,
  "version": "0.0.0-development",
  "homepage": "https://github.com/miniArray/monorail",
  "main": "dist/components/index.js",
  "module": "src/index.js",
  "files": [
    "dist/components",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/miniArray/monorail.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=9"
  },
  "dependencies": {},
  "scripts": {
    "serve": "run-p serve:*",
    "serve:styleguide": "vue-styleguidist server",
    "build": "run-p build:*",
    "build:styleguide": "vue-styleguidist build && echo monorail.rocks > dist/guide/CNAME && cp -R .circleci dist/guide/.circleci",
    "build:components": "webpack",
    "commit": "git cz",
    "commit:all": "git add -A && npm run commit",
    "commit:sync": "npm run commit:all && git push",
    "lint": "eslint src/components/**",
    "lint:fix": "npm run lint -- --fix",
    "test": "run-s test:*",
    "test:unit": "jest --config test/unit/jest.conf.js --coverage",
    "release": "semantic-release",
    "deploy": "node build/deploy.pre && push-dir --dir=dist/guide --branch=gh-pages --verbose --force; node build/deploy.post",
    "dist": "npm run build && npm run deploy",
    "component:create": "node build/template-component.js"
  },
  "devDependencies": {
    "autoprefixer": "^8.1.0",
    "babel-jest": "^21.0.2",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "commitizen": "^2.9.6",
    "cross-env": "^5.1.4",
    "css-loader": "^0.28.7",
    "cssnano": "^3.10.0",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^4.18.2",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-vue": "^4.3.0",
    "husky": "^0.15.0-rc.9",
    "jest": "^22.0.4",
    "jest-serializer-vue": "^0.3.0",
    "mkdirp": "^0.5.1",
    "npm-run-all": "^4.1.2",
    "popmotion": "^8.1.21",
    "postcss-cssnext": "^3.1.0",
    "postcss-import": "^11.1.0",
    "postcss-loader": "^2.1.1",
    "postcss-mixins": "^6.2.0",
    "postcss-nested": "^3.0.0",
    "prettier": "^1.11.1",
    "prettier-eslint": "^8.8.1",
    "push-dir": "^0.4.1",
    "ramda": "^0.25.0",
    "ramda-adjunct": "^2.5.0",
    "sass-loader": "^6.0.6",
    "semantic-release": "^15.0.3",
    "style-loader": "^0.19.0",
    "uglifyjs-webpack-plugin": "^1.2.3",
    "validate-commit": "^3.4.0",
    "vue-jest": "^1.0.2",
    "vue-loader": "^13.5.0",
    "vue-styleguidist": "1.4.8",
    "webpack": "^3.10.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "validate-commit-msg",
      "pre-commit": "npm run lint:fix"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
